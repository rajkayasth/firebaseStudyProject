<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.FireBaseStudyProject" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">#ED2173</item>
        <item name="colorPrimaryVariant">#222934</item>
        <item name="colorAccent">#ED2173</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="noActionBar" parent="Theme.MaterialComponents.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        
    </style>
    <style name="splashTextStyle">
        <item name="fontFamily">@font/allura</item>
        <item name="android:fontFamily">@font/allura</item>
    </style>

    <style name="customEditTextStyle" parent="ThemeOverlay.Material3.TextInputEditText.OutlinedBox">
        <item name="android:textColorHint">@color/colorSecondaryText</item>
        <item name="android:layout_marginHorizontal" tools:targetApi="o">16dp</item>
    </style>

    <style name="CustomTilStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="android:textColorHint">@color/colorText</item>
        <item name="boxStrokeColor">@color/colorPrimary</item>
        <item name="colorControlNormal">@color/colorStrokeGray</item>
        <item name="colorControlActivated">@color/colorPrimary</item>
        <item name="colorControlHighlight">@color/colorPrimary</item>
        <item name="hintTextColor">@color/colorPrimary</item>
        <item name="boxCornerRadiusBottomStart">3dp</item>
        <item name="boxCornerRadiusTopEnd">3dp</item>
        <item name="boxCornerRadiusTopStart">3dp</item>
        <item name="boxCornerRadiusBottomEnd">3dp</item>
        <item name="expandedHintEnabled">false</item>
        <item name="boxStrokeErrorColor">@color/colorRed</item>
        <item name="errorTextColor">@color/colorRed</item>
        <item name="errorTextAppearance">@style/ErrorText</item>
        <item name="errorIconDrawable">@null</item>
        <item name="boxStrokeWidth">1dp</item>
        <item name="boxStrokeWidthFocused">1dp</item>
    </style>
    <style name="ErrorText">
        <item name="android:textSize">12sp</item>
        <item name="fontFamily">@font/montserrat_medium</item>
    </style>
    <!-- dialog -->
    <style name="WideDialog" parent="Base.Theme.AppCompat.Dialog">
        <item name="android:windowMinWidthMajor">90%</item>
        <item name="android:windowMinWidthMinor">90%</item>
        <item name="android:windowBackground">@android:color/transparent</item>
    </style>

</resources>